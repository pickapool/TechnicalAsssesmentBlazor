@inherits MainLayoutBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

@if(_appState.UserInformation == null)
{
    //Render
    <div class="height100vh width100 d-flex align-content-center justify-content-center">
        <UserInformationComponent></UserInformationComponent>
    </div>
} else {
    
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <div class="top-row px-4">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
}