<MudCard Class="w-100 border-25">
    <MudCardContent>
        <MudText Typo="Typo.h6">@Extensions.GetEnumDescription(Activity.ActivityType)</MudText>
        <MudText Typo="Typo.h3">
            <b>@(Activity.LogEntries == null ? "0" : Activity.LogEntries.Count)</b>
        </MudText>
    </MudCardContent>
    <MudCardActions Class="gap-2">
        <MudButton Class="text-right border-25 mb-4" StartIcon="@Icons.Material.Filled.DocumentScanner" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small">Show Logs</MudButton>
        <MudButton OnClick="OpenAddLogDialog" Class="text-right border-25 mb-4" StartIcon="@Icons.Material.Filled.Add" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small">Add</MudButton>
    </MudCardActions>
</MudCard>