@inherits UserInformationComponentBase

<MudItem Class="d-flex align-items-center ma-3" xs="12" sm="8" md="5" lg="4" xl="3">
	<MudPaper Class="width100 d-flex flex-column gap-4 align-items-center border-25" Elevation="3">
		<div class="header-paper center-flex width100">
			<MudText Typo="Typo.h6">Please enter your name</MudText>
		</div>
		<div class="d-flex flex-column align-items-center tfield-container  pa-4">
			@if (String.IsNullOrEmpty(AppState.UserInformation?.UserName))
			{
				<TextFieldComponent @bind-Value="username" Label="Name" ShowError="showError" />
			}
		</div>
		<MudButton OnClick="SetUserInformation" Class="text-right border-25 mb-4" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small">Proceed</MudButton>
	</MudPaper>
</MudItem>
	