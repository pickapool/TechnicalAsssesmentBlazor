@inherits AddLogDialogBase

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mb-1" />
            <span>@Extensions.GetEnumDescription(Activity.ActivityType) | @Project.ProjectNumber</span>
        </MudText>
    </TitleContent>
    <DialogContent>
        <div class="d-flex flex-column gap-1 pa-2" style="width: 400px">
            <TextFieldComponent @bind-Value="LogEntry.Duration" Label="Duration (minutes)" ShowError="showError" ErrorMessage="@errorText"></TextFieldComponent>
            <TextAreaComponent @bind-Value="LogEntry.Note" Label="Note (Optional)"></TextAreaComponent>
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Class="text-right border-25 mb-4" StartIcon="@Icons.Material.Filled.Add" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small">Add</MudButton>
        <MudButton OnClick="Cancel" Class="text-right border-25 mb-4">Cancel</MudButton>
    </DialogActions>
</MudDialog>